<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ViewCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ViewMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="ViewMatch">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="ButtonLogin" parent="ViewMatch">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:background">@drawable/all_backgroud_button</item>
    </style>

    <style name="TextView" parent="ViewCommon">
        <item name="android:textColor">@color/grey_900</item>
    </style>

</resources>
